@{ Produto produto = ViewBag.Produto; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alterar Produto</title>
</head>
<body>
    <form asp-action="Alterar" asp-controller="Produto" method="post">
        <fieldset>
            <legend>Alterar Produto</legend>
            <label for="txtId">Id:</label>
            <input value="@produto.Id" name="txtId" readonly type="text" placeholder="Id do produto" /><br />
            <input value="@produto.Id" name="hdnId" type="hidden" />

            <label for="txtNome">Nome:</label>
            <input value="@produto.Nome" name="txtNome" type="text" placeholder="Nome do produto" /><br />

            <label for="txtDescricao">Descrição:</label>
            <input value="@produto.Descricao" name="txtDescricao" type="text" placeholder="Descrição do produto" /><br />

            <label for="txtPreco">Preço:</label>
            <input value="@produto.Preco" name="txtPreco" type="text" placeholder="Preço do produto" /><br />

            <label for="txtQuantidade">Quantidade:</label>
            <input value="@produto.Quantidade" name="txtQuantidade" type="text" placeholder="Quantidade do produto" /><br />

            <input type="submit" value="Salvar" />
        </fieldset>
    </form>
</body>
</html>
